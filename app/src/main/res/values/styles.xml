<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RecommendTabSelStyle" parent="@style/MainPopupTitleTabSelStyle">
        <item name="android:text">推荐</item>
    </style>

    <style name="MainPopupTitleTabSelStyle" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#939393</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/category_tab_selector</item>
    </style>

    <style name="AppTabSelStyle" parent="@style/MainPopupTitleTabSelStyle">
        <item name="android:text">应用</item>
    </style>

    <style name="GameTabSelStyle" parent="@style/MainPopupTitleTabSelStyle">
        <item name="android:text">游戏</item>
    </style>

    <!-- common icon style -->
    <style name="IconDraweeStyle">
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_width">65dp</item>
        <item name="actualImageScaleType">focusCrop</item>
        <item name="backgroundImage">@drawable/common_icon_background</item>
        <item name="fadeDuration">1000</item>
        <item name="failureImage">@drawable/default_icon</item>
        <item name="failureImageScaleType">centerInside</item>
        <item name="overlayImage">@null</item>
        <item name="placeholderImage">@drawable/default_icon</item>
        <item name="placeholderImageScaleType">fitCenter</item>
        <item name="roundBottomLeft">true</item>
        <item name="roundBottomRight">true</item>
        <item name="roundTopLeft">true</item>
        <item name="roundTopRight">true</item>
        <item name="roundedCornerRadius">12dp</item>
    </style>
</resources>
